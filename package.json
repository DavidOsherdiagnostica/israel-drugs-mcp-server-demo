{
  "name": "israel-drugs-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Israeli Ministry of Health Drugs Database - AI-optimized medical information assistant",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "israel-drugs-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"if (process.platform !== 'win32') require('fs').chmodSync('dist/index.js', 0o755)\"",
    "watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/server.js --http",
    "start:stdio": "node dist/index.js",
    "start:http": "node dist/server.js --http",
    "test": "echo \"Tests will be added later\" && exit 0",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "israel",
    "drugs",
    "medicine",
    "healthcare",
    "api",
    "ai-assistant",
    "claude",
    "anthropic",
    "pharmaceutical"
  ],
  "author": "David Osher <your-email@example.com> (https://linkedin.com/in/davidosher)",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidOsherDevDev/israel-drugs-mcp-server.git"
  },
  "homepage": "https://github.com/DavidOsherDevDev/israel-drugs-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/DavidOsherDevDev/israel-drugs-mcp-server/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
